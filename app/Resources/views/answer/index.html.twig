{% extends 'base.html.twig' %}

{% block body %}
    <h1>Answers list</h1>

    <table>
        <thead>
            <tr>
                <th>Text</th>
                <th>Valid</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td><a href="{{ path('answer_show', { 'id': answer.id }) }}">{{ answer.text }}</td>
                <td>{% if answer.valid %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('answer_show', { 'id': answer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('answer_edit', { 'id': answer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('answer_new') }}">Create a new answer</a>
        </li>
    </ul>
{% endblock %}
